{
  "compilerOptions": {
    "outDir": "./out",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ES5", "es2019"],
    "sourceMap": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./**/node_modules"]
}
